#if applicant has high income and good credit, he's eligible for loan

has_high_income = True
has_good_credit = False
#above values can be changed
if has_high_income and has_good_credit:
    print('Eligible for Loan')
else:
    print('Not eligible')


#if applicant has high income or good credit, he's eligible for loan

has_high_income = True
has_good_credit = False
#above values can be changed
if has_high_income or has_good_credit:
    print('Eligible for Loan')
else:
    print('Not eligible')


#if applicant has high good credit and doesn't have a criminal record, he's eligible for loan

has_good_credit = True
has_criminal_record = False

if has_good_credit and not has_criminal_record:
    print('Eligible for Loan')
else:
    print('Not eligible')
